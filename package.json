  "bugs": {
    "url": "https://github.com/zkreations/canvas-core/issues"
  },
  "files": [
    "data",
    "dist",
    "mixins",
    "init.pug"
  ],
  "homepage": "https://github.com/zkreations/canvas-core#readme",
  "devDependencies": {
    "clean-css": "^5.3.1",
    "clean-css-cli": "^5.6.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.54.5",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended-scss": "^6.0.0"
  }
